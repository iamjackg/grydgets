{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "background_image": { "type": "string" },
    "drop_shadow": { "type": "boolean" },
    "background_color": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 0,
        "maximum": 255
      },
      "minItems": 3,
      "maxItems": 4
    },
    "widgets": {
      "type": "array",
      "items": { "$ref": "#/definitions/widget" }
    }
  },
  "definitions": {
    "color": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 0,
        "maximum": 255
      },
      "minItems": 3,
      "maxItems": 4
    },
    "auth_scheme": {
      "type": "object",
      "minProperties": 1,
      "maxProperties": 1,
      "properties": {
        "bearer": { "type": "string" },
        "basic": {
          "type": "object",
          "required": ["username", "password"],
          "properties": {
            "username": { "type": "string" },
            "password": { "type": "string" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "widget": {
      "type": "object",
      "required": ["widget"],
      "properties": {
        "widget": {
          "type": "string",
          "enum": ["notifiabletext", "notifiableimage", "grid", "dateclock", "restimage", "rest", "label", "httpflip", "scheduleflip", "flip"]
        }
      },
      "allOf": [
        {
          "if": {
            "properties": { "widget": { "const": "notifiabletext" } }
          },
          "then": {
            "required": ["font_path"],
            "properties": {
              "widget": { "type": "string" },
              "name": { "type": "string" },
              "font_path": { "type": "string" },
              "padding": { "type": "integer", "minimum": 0 },
              "text_size": { "type": "integer", "minimum": 1 },
              "color": { "$ref": "#/definitions/color" },
              "children": {
                "type": "array",
                "maxItems": 1,
                "items": { "$ref": "#/definitions/widget" }
              }
            },
            "additionalProperties": false
          }
        },
        {
          "if": {
            "properties": { "widget": { "const": "notifiableimage" } }
          },
          "then": {
            "properties": {
              "widget": { "type": "string" },
              "name": { "type": "string" },
              "children": {
                "type": "array",
                "maxItems": 1,
                "items": { "$ref": "#/definitions/widget" }
              }
            },
            "additionalProperties": false
          }
        },
        {
          "if": {
            "properties": { "widget": { "const": "grid" } }
          },
          "then": {
            "required": ["rows", "columns"],
            "properties": {
              "widget": { "type": "string" },
              "name": { "type": "string" },
              "rows": { "type": "integer", "minimum": 1 },
              "columns": { "type": "integer", "minimum": 1 },
              "row_ratios": {
                "type": "array",
                "items": { "type": "number", "minimum": 0 }
              },
              "column_ratios": {
                "type": "array",
                "items": { "type": "number", "minimum": 0 }
              },
              "padding": { "type": "integer", "minimum": 0 },
              "widget_color": { "$ref": "#/definitions/color" },
              "color": { "$ref": "#/definitions/color" },
              "corner_radius": { "type": "integer", "minimum": 0 },
              "widget_corner_radius": { "type": "integer", "minimum": 0 },
              "image_path": { "type": "string" },
              "drop_shadow": { "type": "boolean" },
              "children": {
                "type": "array",
                "items": { "$ref": "#/definitions/widget" }
              }
            },
            "additionalProperties": false
          }
        },
        {
          "if": {
            "properties": { "widget": { "const": "dateclock" } }
          },
          "then": {
            "required": ["date_font_path", "time_font_path"],
            "properties": {
              "widget": { "type": "string" },
              "name": { "type": "string" },
              "date_font_path": { "type": "string" },
              "time_font_path": { "type": "string" },
              "background_color": { "$ref": "#/definitions/color" },
              "corner_radius": { "type": "integer", "minimum": 0 },
              "color": { "$ref": "#/definitions/color" }
            },
            "additionalProperties": false
          }
        },
        {
          "if": {
            "properties": { "widget": { "const": "restimage" } }
          },
          "then": {
            "required": ["url"],
            "properties": {
              "widget": { "type": "string" },
              "name": { "type": "string" },
              "url": { "type": "string", "format": "uri" },
              "update_frequency": { "type": "integer", "minimum": 1 },
              "json_path": { "type": "string" },
              "auth": { "$ref": "#/definitions/auth_scheme" }
            },
            "additionalProperties": false
          }
        },
        {
          "if": {
            "properties": { "widget": { "const": "rest" } }
          },
          "then": {
            "required": ["url"],
            "properties": {
              "widget": { "type": "string" },
              "name": { "type": "string" },
              "url": { "type": "string", "format": "uri" },
              "method": {
                "type": "string",
                "enum": ["GET", "POST"]
              },
              "update_frequency": { "type": "integer", "minimum": 1 },
              "payload": { "type": "object" },
              "auth": { "$ref": "#/definitions/auth_scheme" },
              "json_path": { "type": "string" },
              "format_string": { "type": "string" },
              "font_path": { "type": "string" },
              "text_size": { "type": "integer", "minimum": 1 },
              "color": { "$ref": "#/definitions/color" },
              "padding": { "type": "integer", "minimum": 0 },
              "align": { "type": "string", "enum": ["left", "center", "right"] },
              "vertical_align": { "type": "string", "enum": ["top", "center", "bottom"] }
            },
            "additionalProperties": false
          }
        },
        {
          "if": {
            "properties": { "widget": { "const": "label" } }
          },
          "then": {
            "required": ["text", "font_path"],
            "properties": {
              "widget": { "type": "string" },
              "name": { "type": "string" },
              "text": { "type": "string" },
              "font_path": { "type": "string" },
              "position": {
                "type": "string",
                "enum": ["above", "below"]
              },
              "text_size": { "type": "integer", "minimum": 1 },
              "text_color": { "$ref": "#/definitions/color" },
              "children": {
                "type": "array",
                "maxItems": 1,
                "items": { "$ref": "#/definitions/widget" }
              }
            },
            "additionalProperties": false
          }
        },
        {
          "if": {
            "properties": {
              "properties" : {"widget" :  "flip"}
            },
            "then" : {
              "properties": {
                "interval" : {"type" : "number"},
                "widget" : {"type": "string"} ,
                "transition" : {"type": "number"},
                "ease" : {"type": "number"}
              }
            }
          }
        },
        {
          "if": {
            "properties": { "widget": { "const": "httpflip" } }
          },
          "then": {
            "required": ["url", "mapping", "default_widget", "children"],
            "properties": {
              "widget": { "type": "string" },
              "name": { "type": "string" },
              "url": { "type": "string", "format": "uri" },
              "mapping": {
                "type": "object",
                "patternProperties": {
                  "^.*$": { "type": "string" }
                },
                "minProperties": 1,
                "additionalProperties": false
              },
              "default_widget": { "type": "string" },
              "json_path": { "type": "string" },
              "auth": { "$ref": "#/definitions/auth_scheme" },
              "method": { "type": "string", "enum": ["GET", "POST"] },
              "payload": { "type": "object" },
              "update_frequency": { "type": "integer", "minimum": 1 },
              "interval": { "type": "integer", "minimum": 1 },
              "transition": { "type": "number", "minimum": 0 },
              "ease": { "type": "integer", "minimum": 1 },
              "children": {
                "type": "array",
                "minItems": 1,
                "items": { "$ref": "#/definitions/widget" }
              }
            },
            "additionalProperties": false
          }
        },
        {
          "if": {
            "properties": { "widget": { "const": "scheduleflip" } }
          },
          "then": {
            "required": ["schedule", "children"],
            "properties": {
              "widget": { "type": "string" },
              "name": { "type": "string" },
              "schedule": {
                "type": "object",
                "patternProperties": {
                  "^([01]\\d|2[0-3]):([0-5]\\d)$": { "type": "string" }
                },
                "minProperties": 1,
                "additionalProperties": false
              },
              "interval": { "type": "integer", "minimum": 1 },
              "transition": { "type": "number", "minimum": 0 },
              "ease": { "type": "integer", "minimum": 1 },
              "children": {
                "type": "array",
                "minItems": 1,
                "items": { "$ref": "#/definitions/widget" }
              }
            },
            "additionalProperties": false
          }
        }
      ]
    }
  }
}
