{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "background_image": { "type": "string" },
    "drop_shadow": { "type": "boolean" },
    "background_color": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 0,
        "maximum": 255
      },
      "minItems": 3,
      "maxItems": 4
    },
    "widgets": {
      "type": "array",
      "items": { "$ref": "#/definitions/widget" }
    }
  },
  "definitions": {
    "color": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 0,
        "maximum": 255
      },
      "minItems": 3,
      "maxItems": 4
    },
    "auth_scheme": {
      "type": "object",
      "minProperties": 1,
      "maxProperties": 1,
      "properties": {
        "bearer": { "type": "string" },
        "basic": {
          "type": "object",
          "required": ["username", "password"],
          "properties": {
            "username": { "type": "string" },
            "password": { "type": "string" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "widget": {
      "type": "object",
      "required": ["widget"],
      "properties": {
        "widget": {
          "type": "string",
          "enum": ["text", "image", "dateclock", "restimage", "rest", "label", "flip", "httpflip", "scheduleflip", "provider", "providerimage", "providerflip", "providertemplate", "nextbus", "pill", "notifiabletext", "notifiableimage", "grid"]
        }
      },
      "allOf": [
        {
          "if": {
            "properties": { "widget": { "const": "notifiabletext" } }
          },
          "then": {
            "required": ["font_path"],
            "properties": {
              "widget": { "type": "string" },
              "name": { "type": "string" },
              "font_path": { "type": "string" },
              "padding": { "type": "integer", "minimum": 0 },
              "text_size": { "type": "integer", "minimum": 1 },
              "color": { "$ref": "#/definitions/color" },
              "children": {
                "type": "array",
                "maxItems": 1,
                "items": { "$ref": "#/definitions/widget" }
              }
            },
            "additionalProperties": false
          }
        },
        {
          "if": {
            "properties": { "widget": { "const": "notifiableimage" } }
          },
          "then": {
            "properties": {
              "widget": { "type": "string" },
              "name": { "type": "string" },
              "children": {
                "type": "array",
                "maxItems": 1,
                "items": { "$ref": "#/definitions/widget" }
              }
            },
            "additionalProperties": false
          }
        },
        {
          "if": {
            "properties": { "widget": { "const": "grid" } }
          },
          "then": {
            "required": ["rows", "columns"],
            "properties": {
              "widget": { "type": "string" },
              "name": { "type": "string" },
              "rows": { "type": "integer", "minimum": 1 },
              "columns": { "type": "integer", "minimum": 1 },
              "row_ratios": {
                "type": "array",
                "items": { "type": "number", "minimum": 0 }
              },
              "column_ratios": {
                "type": "array",
                "items": { "type": "number", "minimum": 0 }
              },
              "padding": { "type": "integer", "minimum": 0 },
              "widget_color": { "$ref": "#/definitions/color" },
              "color": { "$ref": "#/definitions/color" },
              "corner_radius": { "type": "integer", "minimum": 0 },
              "widget_corner_radius": { "type": "integer", "minimum": 0 },
              "image_path": { "type": "string" },
              "drop_shadow": { "type": "boolean" },
              "children": {
                "type": "array",
                "items": { "$ref": "#/definitions/widget" }
              }
            },
            "additionalProperties": false
          }
        },
        {
          "if": {
            "properties": { "widget": { "const": "dateclock" } }
          },
          "then": {
            "required": ["date_font_path", "time_font_path"],
            "properties": {
              "widget": { "type": "string" },
              "name": { "type": "string" },
              "date_font_path": { "type": "string" },
              "time_font_path": { "type": "string" },
              "background_color": { "$ref": "#/definitions/color" },
              "corner_radius": { "type": "integer", "minimum": 0 },
              "color": { "$ref": "#/definitions/color" }
            },
            "additionalProperties": false
          }
        },
        {
          "if": {
            "properties": { "widget": { "const": "restimage" } }
          },
          "then": {
            "required": ["url"],
            "properties": {
              "widget": { "type": "string" },
              "name": { "type": "string" },
              "url": { "type": "string" },
              "update_frequency": { "type": "integer", "minimum": 1 },
              "json_path": { "type": "string" },
              "jq_expression": { "type": "string" },
              "auth": { "$ref": "#/definitions/auth_scheme" },
              "preserve_aspect_ratio": { "type": "boolean" }
            },
            "additionalProperties": false
          }
        },
        {
          "if": {
            "properties": { "widget": { "const": "rest" } }
          },
          "then": {
            "required": ["url"],
            "properties": {
              "widget": { "type": "string" },
              "name": { "type": "string" },
              "url": { "type": "string" },
              "method": {
                "type": "string",
                "enum": ["GET", "POST"]
              },
              "update_frequency": { "type": "integer", "minimum": 1 },
              "payload": { "type": "object" },
              "auth": { "$ref": "#/definitions/auth_scheme" },
              "json_path": { "type": "string" },
              "jq_expression": { "type": "string" },
              "format_string": { "type": "string" },
              "font_path": { "type": "string" },
              "text_size": { "type": "integer", "minimum": 1 },
              "color": { "$ref": "#/definitions/color" },
              "padding": { "type": "integer", "minimum": 0 },
              "align": { "type": "string", "enum": ["left", "center", "right"] },
              "vertical_align": { "type": "string", "enum": ["top", "center", "bottom"] }
            },
            "additionalProperties": false
          }
        },
        {
          "if": {
            "properties": { "widget": { "const": "label" } }
          },
          "then": {
            "required": ["text", "font_path"],
            "properties": {
              "widget": { "type": "string" },
              "name": { "type": "string" },
              "text": { "type": "string" },
              "font_path": { "type": "string" },
              "position": {
                "type": "string",
                "enum": ["above", "below"]
              },
              "text_size": { "type": "integer", "minimum": 1 },
              "text_color": { "$ref": "#/definitions/color" },
              "children": {
                "type": "array",
                "maxItems": 1,
                "items": { "$ref": "#/definitions/widget" }
              }
            },
            "additionalProperties": false
          }
        },
        {
          "if": {
            "properties": { "widget": { "const": "flip" } }
          },
          "then": {
            "properties": {
              "widget": { "type": "string" },
              "name": { "type": "string" },
              "interval": { "type": "integer", "minimum": 1 },
              "transition": { "type": "number", "minimum": 0 },
              "ease": { "type": "integer", "minimum": 1 },
              "children": {
                "type": "array",
                "minItems": 1,
                "items": { "$ref": "#/definitions/widget" }
              }
            },
            "required": ["children"],
            "additionalProperties": false
          }
        },
        {
          "if": {
            "properties": { "widget": { "const": "httpflip" } }
          },
          "then": {
            "required": ["url", "mapping", "default_widget", "children"],
            "properties": {
              "widget": { "type": "string" },
              "name": { "type": "string" },
              "url": { "type": "string", "format": "uri" },
              "mapping": {
                "type": "object",
                "patternProperties": {
                  "^.*$": { "type": "string" }
                },
                "minProperties": 1,
                "additionalProperties": false
              },
              "default_widget": { "type": "string" },
              "json_path": { "type": "string" },
              "auth": { "$ref": "#/definitions/auth_scheme" },
              "method": { "type": "string", "enum": ["GET", "POST"] },
              "payload": { "type": "object" },
              "update_frequency": { "type": "integer", "minimum": 1 },
              "interval": { "type": "integer", "minimum": 1 },
              "transition": { "type": "number", "minimum": 0 },
              "ease": { "type": "integer", "minimum": 1 },
              "children": {
                "type": "array",
                "minItems": 1,
                "items": { "$ref": "#/definitions/widget" }
              }
            },
            "additionalProperties": false
          }
        },
        {
          "if": {
            "properties": { "widget": { "const": "scheduleflip" } }
          },
          "then": {
            "required": ["schedule", "children"],
            "properties": {
              "widget": { "type": "string" },
              "name": { "type": "string" },
              "schedule": {
                "type": "object",
                "patternProperties": {
                  "^([01]\\d|2[0-3]):([0-5]\\d)$": { "type": "string" }
                },
                "minProperties": 1,
                "additionalProperties": false
              },
              "interval": { "type": "integer", "minimum": 1 },
              "transition": { "type": "number", "minimum": 0 },
              "ease": { "type": "integer", "minimum": 1 },
              "children": {
                "type": "array",
                "minItems": 1,
                "items": { "$ref": "#/definitions/widget" }
              }
            },
            "additionalProperties": false
          }
        },
        {
          "if": {
            "properties": { "widget": { "const": "text" } }
          },
          "then": {
            "properties": {
              "widget": { "type": "string" },
              "name": { "type": "string" },
              "text": { "type": "string" },
              "font_path": { "type": "string" },
              "text_size": { "type": "integer", "minimum": 1 },
              "color": { "$ref": "#/definitions/color" },
              "padding": { "type": "integer", "minimum": 0 },
              "align": { "type": "string", "enum": ["left", "center", "right"] },
              "vertical_align": { "type": "string", "enum": ["top", "center", "bottom"] }
            },
            "additionalProperties": false
          }
        },
        {
          "if": {
            "properties": { "widget": { "const": "image" } }
          },
          "then": {
            "properties": {
              "widget": { "type": "string" },
              "name": { "type": "string" },
              "preserve_aspect_ratio": { "type": "boolean" }
            },
            "additionalProperties": false
          }
        },
        {
          "if": {
            "properties": { "widget": { "const": "provider" } }
          },
          "then": {
            "required": ["providers"],
            "properties": {
              "widget": { "type": "string" },
              "name": { "type": "string" },
              "providers": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string" }
              },
              "data_path": { "type": "string" },
              "jq_expression": { "type": "string" },
              "format_string": { "type": "string" },
              "fallback_text": { "type": "string" },
              "show_errors": { "type": "boolean" },
              "font_path": { "type": "string" },
              "text_size": { "type": "integer", "minimum": 1 },
              "color": { "$ref": "#/definitions/color" },
              "padding": { "type": "integer", "minimum": 0 },
              "align": { "type": "string", "enum": ["left", "center", "right"] },
              "vertical_align": { "type": "string", "enum": ["top", "center", "bottom"] }
            },
            "additionalProperties": false
          }
        },
        {
          "if": {
            "properties": { "widget": { "const": "providerimage" } }
          },
          "then": {
            "required": ["providers"],
            "properties": {
              "widget": { "type": "string" },
              "name": { "type": "string" },
              "providers": {
                "type": "array",
                "minItems": 1,
                "maxItems": 1,
                "items": { "type": "string" }
              },
              "data_path": { "type": "string" },
              "jq_expression": { "type": "string" },
              "fallback_image": { "type": "string" },
              "auth": { "$ref": "#/definitions/auth_scheme" },
              "preserve_aspect_ratio": { "type": "boolean" },
              "show_errors": { "type": "boolean" }
            },
            "additionalProperties": false
          }
        },
        {
          "if": {
            "properties": { "widget": { "const": "providerflip" } }
          },
          "then": {
            "required": ["providers", "mapping", "default_widget", "children"],
            "properties": {
              "widget": { "type": "string" },
              "name": { "type": "string" },
              "providers": {
                "type": "array",
                "minItems": 1,
                "maxItems": 1,
                "items": { "type": "string" }
              },
              "data_path": { "type": "string" },
              "jq_expression": { "type": "string" },
              "mapping": {
                "type": "object",
                "patternProperties": {
                  "^.*$": { "type": "string" }
                },
                "minProperties": 1,
                "additionalProperties": false
              },
              "default_widget": { "type": "string" },
              "interval": { "type": "integer", "minimum": 1 },
              "transition": { "type": "number", "minimum": 0 },
              "ease": { "type": "integer", "minimum": 1 },
              "children": {
                "type": "array",
                "minItems": 1,
                "items": { "$ref": "#/definitions/widget" }
              }
            },
            "additionalProperties": false
          }
        },
        {
          "if": {
            "properties": { "widget": { "const": "providertemplate" } }
          },
          "then": {
            "required": ["providers", "template", "hass_url", "hass_token"],
            "properties": {
              "widget": { "type": "string" },
              "name": { "type": "string" },
              "providers": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string" }
              },
              "template": { "type": "string" },
              "hass_url": { "type": "string" },
              "hass_token": { "type": "string" },
              "fallback_text": { "type": "string" },
              "font_path": { "type": "string" },
              "text_size": { "type": "integer", "minimum": 1 },
              "vertical_align": { "type": "string", "enum": ["top", "center", "bottom"] }
            },
            "additionalProperties": false
          }
        },
        {
          "if": {
            "properties": { "widget": { "const": "nextbus" } }
          },
          "then": {
            "required": ["agency", "stop_id"],
            "properties": {
              "widget": { "type": "string" },
              "name": { "type": "string" },
              "agency": { "type": "string" },
              "stop_id": { "type": "string" },
              "route": { "type": "string" },
              "number": { "type": "integer", "minimum": 1 },
              "font_path": { "type": "string" },
              "text_size": { "type": "integer", "minimum": 1 }
            },
            "additionalProperties": false
          }
        },
        {
          "if": {
            "properties": { "widget": { "const": "pill" } }
          },
          "then": {
            "required": ["children"],
            "properties": {
              "widget": { "type": "string" },
              "name": { "type": "string" },
              "circular_mask": { "type": "boolean" },
              "widget_background_color": { "$ref": "#/definitions/color" },
              "pill_background_color": { "$ref": "#/definitions/color" },
              "pill_width_percent": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
              "pill_height_percent": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
              "pill_position_x": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
              "pill_position_y": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
              "pill_corner_radius": { "type": "integer", "minimum": 0 },
              "pill_size_relative_to_circle": { "type": "boolean" },
              "children": {
                "type": "array",
                "minItems": 2,
                "maxItems": 2,
                "items": { "$ref": "#/definitions/widget" }
              }
            },
            "additionalProperties": false
          }
        }
      ]
    }
  }
}
